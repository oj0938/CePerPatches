<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>Polarisbloc - Mechenemy</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>			
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Vanya_HunterArmor"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>22</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Vanya_HunterArmor"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>50</ArmorRating_Blunt>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Vanya_HunterArmor"]/equippedStatOffsets/MeleeDodgeChance</xpath>
				<value>
					<CarryBulk>20</CarryBulk>
					<CarryWeight>80</CarryWeight>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Vanya_HunterArmor"]/statBases</xpath>
				<value>
					<Bulk>80</Bulk>
					<WornBulk>12</WornBulk>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Vanya_HunterArmor"]/statBases/Mass</xpath>
				<value>
					<Mass>60</Mass>
				</value>
			</li>
			<!--Hunter On Skin-->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Vanya_HunterOnSkin"]/statBases/ArmorRating_Sharp</xpath>
				<value>
					<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Vanya_HunterOnSkin"]/statBases/ArmorRating_Blunt</xpath>
				<value>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
				</value>
			</li>
			
			
		</operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>