						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
							<min>1</min>
							<max>1</max>
						</primaryMagazineCount>
						</li>
						</value>
					</li>			

					<li Class="PatchOperationAddModExtension">
						<xpath>/Defs/PawnKindDef[defName="VanyaPK_DroidRuler"]</xpath>
						<value>
						<li Class="CombatExtended.LoadoutPropertiesExtension">
							<primaryMagazineCount>
							<min>100</min>
							<max>100</max>
